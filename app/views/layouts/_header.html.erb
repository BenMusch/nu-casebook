<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div id="logo">
        <%= link_to cases_path do %>
            <%= image_tag 'logo.png' %>
            <span>Casebook</span>
        <% end %>
    </div>
    <% if logged_in? %>
      <%= form_tag cases_path, method: :get, class: "search-bar" do %>
          <%= text_field_tag :search, params[:search], class: "form-control search-field",
                              placeholder: "Search" %>
          <%= submit_tag "Search", class: "search-btn" %>
      <% end %>
    <% end %>
    <nav>
      <% if logged_in? %>
        <%= render 'layouts/logged_in_header' %>
      <% else %>
          <ul id="not-logged-in-header">
            <li><%= link_to "Sign up", signup_path %></li>
            <li><%= link_to "Login", login_path %></li>
          </ul>
      <% end %>
    </nav>
  </div>
</header>
