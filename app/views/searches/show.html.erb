<% provide(:title, "Search") %>

<div class="row">
    <div class="case-table col-md-16">
      <%= render 'shared/index_controls' %>
      <% if @cases.count == 0 %>
        <p>Sorry, no cases match thoses specifications.</p>
      <% end %>
      <% @cases.each do |a_case| %>
        <%= render 'cases/case', a_case: a_case %>
      <% end %>
    </div>
    <%= will_paginate @cases %>
</div>
