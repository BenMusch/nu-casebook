<% provide(:title, @case.title) %>


<div class="row">
  <div class="col-md-12">
    <h1 id="case-title"><%= @case.title %>
      <% if @case.opp_choice? %>
        <span class="label label-info">Opp Choice</label>
      <% end %>
    </h1>
    <div class="btn-group">
        <%= link_to "View", @case.link, target: "_blank",
                    class: "btn btn-default" %>
        <%= link_to "Edit", edit_case_path(@case),
                    class: "btn btn-default" %>
        <%= link_to "Add Round", new_case_round_path(case_id: @case.id),
                    class: "btn btn-default" %>
        <%= link_to "View Rounds", case_rounds_path(case_id: @case.id),
                    class: "btn btn-default" %>
        <%= link_to "Delete", @case, class: "btn btn-default",
                    method: :delete, data: { confirm: "Are you sure?" } %>
    </div>

    <br/><br/>

    <p><b>Case statement:</b> <%= @case.case_statement %></p>

    <b>Topics:</b>
    <% @case.topic_names.each do |topic| %>
      <div class="label label-default"><%= topic %></div>
    <% end %>
    <br><br>

    <%= render 'case_stats' %>
  </div>
</div>
